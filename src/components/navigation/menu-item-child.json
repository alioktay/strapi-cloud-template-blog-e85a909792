{
  "collectionName": "components_navigation_menu_item_children",
  "info": {
    "displayName": "Menu Item Child",
    "icon": "list",
    "description": "Child menu item that can link to either an external URL or an internal page (without further nesting)"
  },
  "attributes": {
    "label": { 
      "type": "string", 
      "required": true 
    },
    "url": { 
      "type": "string",
      "regex": "^(https?:\\/\\/)?([\\da-z\\.-]+)\\.([a-z\\.]{2,6})([\\/\\w \\.-]*)*\\/?$",
      "description": "External URL (e.g., https://example.com) or internal path (e.g., /about)"
    },
    "openInNewTab": { 
      "type": "boolean", 
      "default": false 
    },
    "page": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::page.page",
      "description": "Internal page reference"
    },
    "type": {
      "type": "enumeration",
      "enum": ["external", "internal"],
      "required": true,
      "default": "internal",
      "description": "Type of link: external URL or internal page"
    }
  }
}
