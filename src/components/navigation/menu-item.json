{
  "collectionName": "components_navigation_menu_items",
  "info": {
    "displayName": "Menu Item",
    "icon": "list",
    "description": "Menu item that can link to either an external URL or an internal page"
  },
  "attributes": {
    "label": {
      "type": "string",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "required": true,
      "default": "internal",
      "enum": [
        "external",
        "internal"
      ]
    },
    "url": {
      "type": "string",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "type"
            },
            "external"
          ]
        }
      },
      "default": "#"
    },
    "page": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::page.page",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "type"
            },
            "internal"
          ]
        }
      }
    },
    "openInNewTab": {
      "type": "boolean",
      "default": false
    },
    "children": {
      "type": "component",
      "component": "navigation.menu-item-child",
      "repeatable": true
    }
  }
}
