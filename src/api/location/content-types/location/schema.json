{
  "kind": "collectionType",
  "collectionName": "locations",
  "info": {
    "singularName": "location",
    "pluralName": "locations",
    "displayName": "Location"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "name": { "type": "string", "required": true },
    "address": { "type": "string" },
    "city": { "type": "string" },
    "state": { "type": "string" },
    "zipCode": { "type": "string" },
    "country": { "type": "string" },
    "description": { "type": "richtext" },
    "image": { "type": "media", "multiple": false, "allowedTypes": ["images"] },
    "numberOfTables": {
      "type": "integer",
      "min": 0,
      "description": "Number of table tennis tables available"
    },
    "venueType": {
      "type": "enumeration",
      "enum": [
        "club",
        "hall",
        "arena",
        "outdoor",
        "other"
      ],
      "description": "Type of venue"
    },
    "accessibility": {
      "type": "text",
      "description": "Accessibility information (wheelchair access, parking, etc.)"
    },
    "tournaments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::tournament.tournament",
      "mappedBy": "location"
    }
  }
}
