{
  "kind": "collectionType",
  "collectionName": "news_items",
  "info": {
    "singularName": "news",
    "pluralName": "news-items",
    "displayName": "News"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": { "type": "string", "required": true },
    "slug": { "type": "uid", "targetField": "title" },
    "excerpt": { "type": "text" },
    "content": { "type": "dynamiczone", "components": ["shared.rich-text", "shared.media"] },
    "coverImage": { "type": "media", "multiple": false },
    "author": { "type": "string" },
    "publishedAt": { "type": "datetime" },
    "relatedTournaments": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tournament.tournament"
    }
  }
}
