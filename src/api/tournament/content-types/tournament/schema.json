{
  "kind": "collectionType",
  "collectionName": "tournaments",
  "info": {
    "singularName": "tournament",
    "pluralName": "tournaments",
    "displayName": "Tournament"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": { "type": "string", "required": true },
    "slug": { "type": "uid", "targetField": "title" },
    "startDate": { "type": "date" },
    "endDate": { "type": "date" },
    "level": {
      "type": "enumeration",
      "enum": ["regional", "state", "national", "youth", "veteran"]
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category"
    },
    "location": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::location.location"
    },
    "organizer": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::organizer.organizer"
    },
    "registrationUrl": { "type": "text" },
    "flyer": { "type": "media", "multiple": false },
    "description": { "type": "richtext" },
    "isOnlineRegistrationOpen": { "type": "boolean", "default": true },
    "tags": { "type": "component", "repeatable": true, "component": "common.tag" },
    "publishedAt": { "type": "datetime" }
  }
}